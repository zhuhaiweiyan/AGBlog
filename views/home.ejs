<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% if (isAuthenticated) { %>
  <!-- add a button for users to post blogs -->
  <a href="/compose" class="btn btn-primary">Post a new blog</a>
<% } %>

<% posts.forEach(function(post){ %>
  <h2><%=post.title%></h2>
  <p>By <%= post.author %> on <%= post.timestamp.toLocaleString() %></p>
  <p>
    <%=post.content.substring(0, 60) + " ..." %>
    <a href="/posts/<%=post._id%>">Read More</a>
  </p>
<% }) %>

<%- include("partials/footer"); -%>
